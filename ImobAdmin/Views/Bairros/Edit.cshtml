@model ImobAdmin.Models.Bairro

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Bairro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BairroNome" class="control-label"></label>
                <input asp-for="BairroNome" class="form-control" />
                <span asp-validation-for="BairroNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}