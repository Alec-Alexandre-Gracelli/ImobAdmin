@model IEnumerable<ImobAdmin.Models.Imagem>

@{
    ViewData["Title"] = "Imagem";
}

<h1>Imagens</h1>

<p>
    <a asp-action="Create">Criar novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImagemNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EhDestaque)
            </th> 
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ImagemNome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EhDestaque)
                </td>  
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ImagemId">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.ImagemId">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.ImagemId">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
